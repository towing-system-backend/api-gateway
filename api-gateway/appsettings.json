{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "towing-system-backend",
    "Audience": "towing-system-frontend",
    "ExpirationInMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "users-microservice",
        "AuthorizationPolicy": "admin-access",
        "Match": {
          "Path": "/api/user/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/user/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "users-microservice": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:9001"
          }
        }
      }
    }
  }
}
